# Gitallica Configuration Example
# This file demonstrates the configuration system with multiple paths

# Author mappings for this project
author_mappings:
  - patterns: ["bgricker", "ben.ricker"]
    canonical: "bgricker@gmail.com"

# Path-specific configurations
churn:
  paths:
    - "cmd/"
    - "main.go"

bus_factor:
  paths:
    - "cmd/"
    - "main.go"

dead_zones:
  paths:
    - "cmd/"
    - "main.go"
    - "docs/"

# Thresholds
thresholds:
  churn:
    healthy: 5
    warning: 15
  bus_factor:
    critical: 1
    warning: 2

# Global defaults
defaults:
  last: "6m"  # Default time window
  limit: 20  # Default number of results to show